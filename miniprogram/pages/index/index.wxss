/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  margin: 0;
  padding: 0;
  position:fixed;
  height:100%;
  width:100%;
}


.uploader, .tunnel {
  margin-top: 40rpx;
  height: 300rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo {
  height: 300rpx;
  width: 100%;
  background: url("https://images.pexels.com/photos/1426044/pexels-photo-1426044.jpeg?auto=compress&cs=tinysrgb&h=650&w=940 1x, https://images.pexels.com/photos/1426044/pexels-photo-1426044.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940 2x");
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  align-items: center;
  margin: 0 auto ;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto ;
  text-align: center;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: white;
  background-size: cover;
}
.userinfo-intro {
  margin-top: 30rpx;
  font-size: 25rpx;
  color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.menu {
  flex-direction:row;
  /* justify-content: center; */
  width: 100%;
  display:flex;
  height:60rpx;
  text-align: center;
  padding: 5rpx;
  border: 5rpx;
}
.menu-recommend {
  width: 30%;
  height: 100%;
}
.menu-all{
  width:30%;
  height: 100%;
}
.menu-like{
  width:30%;
  height:100%;
}


.swiper-all .swiper-like .swiper-recommend{
  height: 100%;
  background-color: blue;
}

.swiper-container {
  display: true;
  height: 100%;
}

