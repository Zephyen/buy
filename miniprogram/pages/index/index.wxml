<!--index.wxml-->
<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
    ></button>
    <view>
      <text class="userinfo-nickname" bindtap="onGetOpenid">点击获取 openid</text>
    </view>
    <view>
      <text class="userinfo-intro">个人简介</text>
    </view>
  </view>


  <!-- 上传图片 -->
  <view class="menu">
    <view class="menu-recommend" bindtap="doUpload">
      <text class="menu-recommend-text">推荐</text>
    </view>
    <view class="menu-all">
      <text class='menu-all-text'>全部</text>
    </view>
    <view class="menu-like">
      <text class="menu-like-text">喜欢</text>
    </view>
   
  </view>
<!-- <swiper></swiper> -->
<swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="false"
  duration="1000"
>
    <swiper-item>
      <view class="swiper-recommend">123123</view>
    </swiper-item>
    <swiper-item>
      <view class="swiper-all">123123</view>
    </swiper-item>
    <swiper>
      <view class="swiper-like">123123</view>
    </swiper>
</swiper>

